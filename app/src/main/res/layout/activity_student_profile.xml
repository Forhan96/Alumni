<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentProfileActivity">


    <ImageView
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:src="@drawable/person"
        android:id="@+id/student_profile_image_id"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_profile_image_id"
        android:id="@+id/student_name"
        android:background="@drawable/et_bg"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="20sp"
        android:paddingLeft="10sp"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:drawablePadding="12sp"
        android:hint="Name"
        android:textSize="24sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_name"
        android:id="@+id/student_email"
        android:background="@drawable/et_bg"
        android:padding="10dp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="20sp"
        android:paddingLeft="10sp"
        android:drawableLeft="@drawable/ic_session_white_24dp"
        android:drawablePadding="12sp"
        android:hint="Email"
        android:textSize="24sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_email"
        android:id="@+id/student_phone"
        android:background="@drawable/et_bg"
        android:padding="10dp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="20sp"
        android:paddingLeft="10sp"
        android:drawableLeft="@drawable/ic_lock_white_24dp"
        android:drawablePadding="12sp"
        android:hint="Phone"
        android:textSize="24sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_phone"
        android:id="@+id/student_dept"
        android:background="@drawable/et_bg"
        android:padding="10dp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="20sp"
        android:paddingLeft="10sp"
        android:drawableLeft="@drawable/ic_lock_white_24dp"
        android:drawablePadding="12sp"
        android:hint="Department"
        android:textSize="24sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_dept"
        android:id="@+id/student_session"
        android:background="@drawable/et_bg"
        android:padding="10dp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="20sp"
        android:paddingLeft="10sp"
        android:drawableLeft="@drawable/ic_lock_white_24dp"
        android:drawablePadding="12sp"
        android:hint="Session"
        android:textSize="24sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_session"
        android:id="@+id/student_id"
        android:background="@drawable/et_bg"
        android:padding="10dp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="20sp"
        android:paddingLeft="10sp"
        android:drawableLeft="@drawable/ic_lock_white_24dp"
        android:drawablePadding="12sp"
        android:hint="id"
        android:textSize="24sp"
        />



    <Button
        android:id="@+id/btn_student_edit_profile"
        android:layout_below="@+id/student_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:text="Edit Profile"
        android:textColor="#fff"
        android:textSize="24sp"
        android:paddingHorizontal="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_below="@+id/student_id"
        android:layout_toRightOf="@id/btn_student_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:text="Logout"
        android:textColor="#fff"
        android:textSize="24sp"
        android:paddingHorizontal="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/white"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>